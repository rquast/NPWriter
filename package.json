{
  "name": "np-writer",
  "description": "NewsPilot Writer",
  "dependencies": {
    "aws-sdk": "^2.6.12",
    "b64": "^3.0.2",
    "body-parser": "^1.15.2",
    "bunyan": "^1.8.1",
    "detect-browser": "^1.5.0",
    "express": "^4.14.0",
    "http-proxy": "^1.15.1",
    "lodash": "^4.14.1",
    "moment": "^2.15.1",
    "nodehun": "^2.0.11",
    "request": "^2.75.0",
    "response-time": "^2.3.1",
    "whatwg-fetch": "1.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.0",
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-jest": "^16.0.0",
    "babel-loader": "^6.2.5",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015-node6": "^0.3.0",
    "babel-preset-stage-3": "^6.11.0",
    "copy-webpack-plugin": "^3.0.1",
    "css-loader": "^0.25.0",
    "eslint": "^3.2.2",
    "eslint-loader": "^1.6.1",
    "exports-loader": "^0.6.3",
    "extract-text-webpack-plugin": "^1.0.1",
    "font-awesome": "4.6.3",
    "html-webpack-plugin": "^2.22.0",
    "imports-loader": "^0.6.5",
    "jest": "^15.1.1",
    "jsdoc": "^3.4.2",
    "jxon": "^2.0.0-beta.3",
    "minami": "^1.1.1",
    "node-sass": "^3.10.0",
    "npm-run-all": "^3.1.0",
    "sass-loader": "^4.0.2",
    "sinon": "2.0.0-pre.3",
    "style-loader": "^0.13.1",
    "substance": "substance/substance#beta-6",
    "uglify-js": "git://github.com/mishoo/UglifyJS2.git#harmony",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.2"
  },
  "scripts": {
    "start": "node server.js",
    "start-production": "AWS_ACCESS_KEY_ID=XXX AWS_SECRET_ACCESS_KEY=XXX AWS_S3_BUCKET_NAME=writer-dev-config NODE_ENV=production PORT=5000 node server.js",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "webpack": "webpack --watch",
    "dev": "npm-run-all --parallel start webpack",
    "build": "cd node_modules/substance/ && npm install && node make && cd ../.. && webpack --config webpack.config.production.js && ./node_modules/uglify-js/bin/uglifyjs dist/writer/app.js -o dist/writer/app.js",
    "build-substance": "cd node_modules/substance/ && npm install && node make",
    "reset": "rm -rf node_modules/; yarn cache clean; yarn install",
    "generate-docs": "node_modules/.bin/jsdoc --configure .jsdoc.json --verbose",
    "generate-docs-to-developerportal": "npm run generate-docs -- -d ../../NPWriter/developerportal/docs"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/styleMock.js",
      "^.+\\.(css|scss)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "node",
      "es6"
    ],
    "collectCoverageFrom": [
      "writer/**/*.js"
    ]
  },
  "version": "2.0.0"
}
